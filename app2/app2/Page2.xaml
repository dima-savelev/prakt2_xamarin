<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="app2.Page2" Title="Задание №2">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="90" />
                <RowDefinition Height="90" />
                <RowDefinition Height="40" />
                <RowDefinition Height="30" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Entry Placeholder="Введите трехзначное число" FontSize="25" MaxLength="3" x:Name="numberText" Grid.Row="0" TextChanged="numberText_TextChanged" HorizontalTextAlignment="Center"></Entry>
            <Button Text="Рассчитать" Clicked="Calculate_Clicked" Grid.Row="1"></Button>
            <Label Text="Сумма цифр:" x:Name="sumOut" Grid.Row="2" Margin="10,0,0,0" FontSize="20"></Label>
            <Label Text="Произведение цифр:" x:Name="prodOut" Grid.Row="3" Margin="10,0,0,0" FontSize="20"></Label>
            <Image Source="man.jpg" Grid.Row="4"></Image>
        </Grid>
    </ContentPage.Content>
</ContentPage>